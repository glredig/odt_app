<% provide(:title, "Edit Blog post") %>
<h1>New Blog entry</h1><br><br>

<%= form_for(@blogpost) do |f| %>
	
	<%= f.label :title %><br>
	<%= f.text_field :title, class: "blog_title_field" %><br><br>
	
	<%= f.label :content %><br>
	<%= f.text_area :content, class: "blog_content_field" %><br><br>

	<%= f.submit "Update Post" %>
	
<% end %>