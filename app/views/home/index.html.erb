<section>
	<div id="slideshow">
		<div style="margin-top: 30px; font-weight: bold; letter-spacing: -1px; font-size: 70px; line-height: 50px; font-variant: small-caps; color: #ffffff;">
			learn faster.<br>
			play better.<br>
			<span style="color: #51819a;" >online.</span><br>
		</div>
		<div id="slide_1" class="slide">
			<ul>
				<li>Video Lessons</li>
				<li>Written Lessons</li>
				<li>Frequent Blog Posts</li>
				<li>Webcam Lessons</li>
			</ul>
		</div>
	</div>
</section>
<section>
	<div class="widget blog">
		<div class="category_title">
			<%= link_to raw('<i class="icon-comment"></i>'), blogposts_path, title: "Blog" %>
		</div>
		<ul class="category_box">
			<%= @test %>
			<% if @blogposts.present? %>
				<% @blogposts.each_with_index do |blogpost, index| %>
					<% if index < 3 %>
						<li>
							<%= link_to(blogpost) do  %>
								<span class='link_title'><%= truncate_html(blogpost.title, length: 35) %></span>
								<span class='date_added'><%= blogpost.created_at.strftime("%-m/%e/%Y") %></span>
								<br>
								<p><%= truncate_html(blogpost.content, length: 100) %></p>
							<% end %>
						</li>
					<% end %>
				<% end %>
				<%= link_to "View All", blogposts_path, class: "view_all" %>
			<% else %>
				There are no blog entries.
			<% end %>
		</ul>
	</div>
	<div class="widget lesson">
		<div class="category_title">
			<%= link_to raw('<i class="icon-facetime-video"></i>'), lessons_path, title: "Lessons" %>
		</div>
		<ul class="category_box">
			<% if @lesson_feeds.present? %>
				<% @lesson_feeds.each_with_index do |lesson_feed, index| %>
					<% if index < 3 %>
						<% if lesson_feed.model_name == 'VideoLesson' %>
							<% lesson = VideoLesson.find(lesson_feed.item_id) %>
							<li>
								<%= link_to(lesson) do  %>
									<span class='link_title'><%= truncate_html(lesson.title, length: 30) %></span>
									<span class='date_added'><%= lesson.created_at.strftime("%-m/%e/%Y") %></span>
									<%= image_tag "icon_feed_video.png", height: "13", class: "lesson_type_icon", title: "Video Lesson" %>
									<br>
									<p><%= truncate_html(lesson.description, length: 100) %></p>
								<% end %>
							</li>
						<% else %>
							<% lesson = WrittenLesson.find(lesson_feed.item_id) %>
							<li>
								<%= link_to(lesson) do  %>
									<span class='link_title'><%= truncate_html(lesson.title, length: 30) %></span>
									<span class='date_added'><%= lesson.created_at.strftime("%-m/%e/%Y") %></span>
									<%= image_tag "icon_feed_written.png", height: "13", class: "lesson_type_icon", title: "Written Lesson" %>
									<br>
									<p><%= truncate_html(lesson.content, length: 100) %></p>
								<% end %>
							</li>
						<% end %>
					<% end %>
				<% end %>
				<%= link_to "View All", lessons_path, class: "view_all" %>
			<% else %>
				There are no video lessons.
			<% end %>
		</ul>
	</div>
	<div class="widget news">
		<div class="category_title">
			<%= link_to raw('<i class="icon-bullhorn"></i>'), news_items_path, title: "News" %>
		</div>
		<ul class="category_box">
			<% if @news_items.present? %>
				<% @news_items.each_with_index do |news_item, index| %>
					<% if index < 3 %>
						<li>
							<%= link_to(news_item) do  %>
								<span class='link_title'><%= truncate_html(news_item.title, length: 35) %></span>
								<span class='date_added'><%= news_item.created_at.strftime("%-m/%e/%Y") %></span>
								<br>
								<p><%= truncate_html(news_item.content, length: 100) %></p>
							<% end %>
						</li>
					<% end %>
				<% end %>
				<%= link_to "View All", news_items_path, class: "view_all" %>
			<% else %>
				There are no news items.
			<% end %>
		</ul>
	</div>
	<div class="clear"></div>
</section>
