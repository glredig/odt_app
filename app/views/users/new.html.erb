<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages' %>
	<%= f.label :name %>
	<%= f.text_field :name, id: "signup_name"  %>
	<br>

	<%= f.label :email %>
	<%= f.text_field :email, id: "signup_email"  %>
	<br>

	<%= f.label :password %>
	<%= f.password_field :password, id: "signup_password" %>
	<br>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation, id: "signup_confirmation" %>

	<%= f.submit "Create my account" %>

<% end %>
