<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<%= form_for(:session, url: sessions_path) do |f| %>
	
	<%= f.label :email %><br>
	<%= f.text_field :email %><br><br>

	<%= f.label :password %><br>
	<%= f.password_field :password %><br><br>

	<%= f.submit "Sign in", id: "session_signin" %>
<% end %>

<br>
<p>Don't have an account?</p> <%= link_to "Sign up now", signup_path %>