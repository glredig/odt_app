<% provide(:title, "Video Lessons") %>
<h1>Video Lessons</h1>
<% if signed_in? && admin? %>
  <%= direct_upload_form_for @uploader do |f| %>
  	<p><%= f.file_field :video %></p>
  	<p><%= f.submit "Upload Video" %></p>
  <% end %>
<% end %>
<ul id="video_lesson_list">
  <% if @video_lessons.present? %>		
  	<%= render @video_lessons %>
  <% else %>
  	<p>There are no Video Lessons right now. Check back soon.</p>
  <% end %>
</ul>