<%= form_for(@written_lesson) do |f| %>
  <% if @written_lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@written_lesson.errors.count, "error") %> prohibited this written_lesson from being saved:</h2>

      <ul>
      <% @written_lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br><br>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <br>
  <div class="field">
    Available to:<br>
    <%= f.select :premium_only, {"Premium users only" => true, "All users" => false} %>
  </div>
  <br><br>

  <%= f.fields_for :images do |builder| %>
    <%= render 'image_fields', f: builder %>
  <% end %>
  <br><br>
  <%= link_to_add_fields "Add an image file to this lesson", f, :images %>
  <br><br><br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
